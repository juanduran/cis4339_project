<%= simple_form_for(@equipment_checkout) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :checkout_date %>
    <%= f.input :return_date %>
    <%= f.input :employee_id %>
    <%= f.input :equipment_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
