
<!-- Page Content -->
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Vehicle_checkouts
        <small>Available</small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Vehicle_checkouts</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
      <th>Checkout date</th>
      <th>Return date</th>
      <th>Crew</th>
      <th>Vehicle</th>

      <th colspan="3"></th>
    </tr>
        </thead>
        <tbody>
    <% @vehicle_checkouts.each do |vehicle_checkout| %>
      <tr>
        <td><%= vehicle_checkout.checkout_date %></td>
        <td><%= vehicle_checkout.return_date %></td>
        <% if vehicle_checkout.crew.present? %>
        <td><%= vehicle_checkout.crew.crew_name %></td>
        <% else %>
        <td></td>
  <% end %>
        <% if vehicle_checkout.vehicle.present? %>
        <td><%= vehicle_checkout.vehicle.vehicle_name %></td>
  <% else %>
  <td></td>
  <% end %>

        <% if user_signed_in? %>
            <% if vehicle_checkout.crew.id == current_user.employee.crew_id %>
                <td><%= link_to 'Return', edit_vehicle_checkout_path(vehicle_checkout), class: "btn btn-primary" %></td>
            <% else %>
                <td></td>
            <% end %>
        <% end %>

        <td><%= link_to 'Show', vehicle_checkout, class: "btn btn-warning"%></td>
        <td><%= link_to 'Destroy', vehicle_checkout, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
        </tbody>
      </table>
    </div>

<br>
   <div class="panel-footer">
        <%= link_to 'Make A Reservation', new_vehicle_checkout_path, class: "btn btn-info" %>
      </div>

    </div>
    </div>














