<!-- Page Content -->
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Services
        <small>Available</small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Services</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr class = "success">
          <th>Service</th>
          <th>Description</th>
          <th>Price</th>
          <th>Employee</th>
          <th colspan="3">Options</th>
        </tr>
        </thead>
        <tbody>
        <% @services.each do |service| %>
            <tr>
              <td><%= service.name %></td>
              <td><%= service.description %></td>
              <td><%= service.price %></td>
              <td><%= link_to 'Show', service,class: "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_service_path(service),class: "btn btn-warning" %></td>
              <td><%= link_to 'Destroy', service,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

<br>
   <div class="panel-footer">
        <%= link_to 'New Service', new_service_path, class: "btn btn-info" %>
      </div>

    </div>
    </div>


