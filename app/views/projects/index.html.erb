<!-- Page Content -->
<div class="container">

<!-- Page Heading/Breadcrumbs -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Projects
      <small>Available</small>
    </h1>
    <ol class="breadcrumb">
      <%= link_to "Welcome", welcome_index_path %>
      </li>
      <li class="active"> \ Projects</li>
    </ol>
  </div>
</div>
<!-- /.row -->

<div class="panel-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr class = "success">
        <th>Project</th>
        <th>Description</th>
        <th colspan="2">Options</th>
      </tr>
      </thead>
      <tbody>
      <% @projects.each do |project| %>
          <tr>
            <td><%= project.project_name %></td>
            <td><%= project.description %></td>
                <td><%= link_to 'Show', project,class: "btn btn-success" %></td>
                <td><%= link_to 'Edit', edit_project_path(project),class: "btn btn-warning" %></td>
                <td><%= link_to 'Destroy', project,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>

          </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <br>
  <% if can? :create, Project %>
  <div class="panel-footer">
    <%= link_to 'New Project', new_project_path, class: "btn btn-success" %>
  </div>
  <% end %>

</div>
</div>
