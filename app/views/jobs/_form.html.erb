<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :crew_id %>
    <%= f.input :project_id %>
  </div>
  <div id = "LineItems">
    <%= f.simple_fields_for :line_items do |line_item|%>
    <%= render 'LineItem_fields', f: line_item %>
    <% end %>
    <div class = "links">
<%=link_to_add_association 'Add LineItems', f, :line_items%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
