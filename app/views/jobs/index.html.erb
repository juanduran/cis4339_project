
<!-- Page Content -->
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Jobs
        <small>Available</small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Jobs</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
      <th>Crew</th>
      <th colspan="3"></th>
    </tr>
        </thead>
        <tbody>
        <% @jobs.each do |job| %>
            <tr>
               <td><%= job.crew_id %></td>
              <td><%= link_to 'Show', job,class: "btn btn-primary"  %></td>
              <td><%= link_to 'Edit', edit_service_path(job),class: "btn btn-warning"  %></td>
              <td><%= link_to 'Destroy', job,class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

<br>
   <div class="panel-footer">
        <%= link_to 'New Job', new_job_path, class: "btn btn-primary" %>
      </div>

    </div>
    </div>







