<!-- Page Content -->
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Crews
        <small>Available</small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Crews</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
    <tr class = "success">
    <th>Crew name</th>
      <th colspan="3"></th>
    </tr>
        </thead>
        <tbody>
  <% @crews.each do |crew| %>
           <tr>
        <td><%= crew.crew_name %></td>
        <td><%= link_to 'Show', crew,class: "btn btn-success" %></td>
        <% if can? :edit, Crew %>
        <td><%= link_to 'Edit', edit_crew_path(crew),class: "btn btn-warning" %></td>
        <% end %>
        <% if can? :delete, Crew %>
        <td><%= link_to 'Destroy', crew, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
        </tbody>
      </table>
    </div>

<br>
<% if can? :create, Crew %>
   <div class="panel-footer">
        <%= link_to 'New Crew', new_crew_path, class: "btn btn-success" %>
      </div>
 <% end %>     
    </div>
    </div>


