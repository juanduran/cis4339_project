<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class ="panel-heading">
        <h3 class="panel-title">Crews</h3>
      </div>
      <div class = "panel-body">
       <table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Crew name</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @crews.each do |crew| %>
           <tr>
        <td><%= crew.crew_name %></td>
        <td><%= link_to 'Show', crew %></td>
        <td><%= link_to 'Edit', edit_crew_path(crew) %></td>
        <td><%= link_to 'Destroy', crew, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

      </div>
      <div class="panel-footer">
        <%= link_to 'New Crew', new_crew_path, class: "btn btn-primary" %>
