
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Users
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Users</li>
      </ol>
    </div>
  </div>

<div class="panel-body">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
      <tr>
        <th>Name</th>
        <th>Role</th>
        <th>Email</th>
        <th colspan="4">Options</th>
        <th colspan="4"></th>


      </tr>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>
            <% if user.employee.present? %>
            <td><%= user.employee.employee_name %></td>
            <% else %>
            <td></td>
      <% end %>
            <% if user.role.present? %>
            <td><%= user.role.name %></td>
      <% else %>
      <td></td>
      <% end %>
            <td><%= user.email %></td>
            <td><%= link_to 'Show', user,class: "btn btn-success" %></td>
            <td><%= link_to 'Edit', edit_user_path(user),class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', user,class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>


<br>
<div class="panel-footer">
        <%= link_to 'New User', new_user_path, class: "btn btn-success" %>
      </div>


    </div>
    </div>