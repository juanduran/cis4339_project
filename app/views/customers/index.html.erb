<!-- Page Content -->
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Customers
        <small>Available</small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Customers</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
    <tr class = "success">
      <th>Customer name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Business</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </tr>
        </thead>
        <tbody>
 <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_name %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.email %></td>
        <td><%= customer.street_address %></td>
        <td><%= customer.city %></td>
        <td><%= customer.state %></td>
        <td><%= customer.zip %></td>
        <% if customer.business.present? %>
        <td><%= customer.business.business_name if customer.business%></td>
        <% else %>
        <td></td>
        <% end %>
        <% if customer.user.present? %>
            <td><%= customer.user.email %></td>
        <% else %>
            <td></td>
        <% end %>
        
        <td><%= link_to 'Show', customer,class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', customer,class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
        </tbody>
      </table>
    </div>

<br>
   <div class="panel-footer">
        <%= link_to 'New Customers', new_customer_path, class: "btn btn-success" %>
      </div>

    </div>
    </div>

