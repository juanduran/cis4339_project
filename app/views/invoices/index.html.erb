
<!-- Page Content -->
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Invoices
        <small>Available</small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Invoices</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="panel-body">
<%= search_form_for @search do |f| %>
    
       <div class = "field">
       <%= f.label :date_gteq, "DATE BETWEEN  " %>
       <%= f.date_select :date_gteq %>
       <%= f.label :date_teq, "AND" %>
       <%= f.date_select :date_lteq %>
        <div class = "action"><%=f.submit "Search",class: "btn btn-info" %>
       </div>
       </div>
        <% end %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
    <tr class = "success">
      <th>Customer</th>
      <th>Date</th>
      <th>Invoice total</th>
      <th>Terms</th>
      <th>Project</th>
      <th>Crew</th>
      <th colspan="3"></th>
    </tr>
        </thead>
        <tbody>
     <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.customer.customer_name %></td>
        <td><%= invoice.date %></td>
        <td><%= invoice.invoice_total %></td>
        <td><%= invoice.terms %></td>
        <td><%= invoice.project.project_name %></td>
        <td><%= invoice.crew.crew_name %></td>
        <td><%= link_to 'Show',invoice,class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', invoice,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
        </tbody>
      </table>
    </div>

<br>
   <div class="panel-footer">
        <%= link_to 'New Invoice', new_invoice_path, class: "btn btn-info" %>
      </div>

    </div>
    </div>












