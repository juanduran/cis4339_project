<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class ="panel-heading">
        <h1 class="panel-title">INVOICES</h1>
      </div>
      <div class = "panel-body">
       <%= search_form_for @search do |f| %>
     </div>
       <div class = "field">
       <%= f.label :date_gteq, "DATE BETWEEN  " %>
       <%= f.date_select :date_gteq %>
       <%= f.label :date_teq, "AND" %>
       <%= f.date_select :date_lteq %>
        <div class = "action"><%=f.submit "Search",class: "btn btn-danger" %>
       </div>
       </div>
      
        <% end %>

        </div>
     
       <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Date</th>
      <th>Invoice total</th>
      <th>Terms</th>
      <th>Project</th>
      <th>Job</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.customer_id %></td>
        <td><%= invoice.date %></td>
        <td><%= invoice.invoice_total %></td>
        <td><%= invoice.terms %></td>
        <td><%= invoice.project_id %></td>
        <td><%= invoice.job_id %></td>
        <td><%= link_to 'Show',invoice,class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', invoice,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

      </div>
          <div class="panel-footer">
        <%= link_to 'New Invoice', new_invoice_path, class: "btn btn-primary" %>
      </div>
     
       </div>
        </div>
         </div>





