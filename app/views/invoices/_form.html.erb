<%= simple_form_for(@invoice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :customer_id %>
    <%= f.input :date %>
    <%= f.input :invoice_total %>
    <%= f.input :terms %>
    <%= f.input :project_id %>
    <%= f.input :job_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>