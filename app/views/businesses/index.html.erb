
<!-- Page Content -->
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Businesses
        <small>Available</small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Businesses</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
      <tr class = "success">
      <th>Business name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
        </thead>
        <tbody>
<% @businesses.each do |business| %>
      <tr>
        <td><%= business.business_name %></td>
        <td><%= business.phone_number %></td>
        <td><%= business.email %></td>
        <td><%= business.street_address %></td>
        <td><%= business.city %></td>
        <td><%= business.state %></td>
        <td><%= business.zip %></td>

        <td><%= link_to 'Show', business,class: "btn btn-success" %></td>
        <% if can? :edit, Business %>
        <td><%= link_to 'Edit', edit_business_path(business),class: "btn btn-warning" %></td>
        <% end %>
        <% if can? :destroy, Business %>
        <td><%= link_to 'Destroy', business,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
        </tbody>
      </table>
    </div>

<br>
<% if can? :create, Business %>
   <div class="panel-footer">
        <%= link_to 'New Business', new_business_path, class: "btn btn-success" %>
      </div>
  <% end %>

    </div>
    </div>





