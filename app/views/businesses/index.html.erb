
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class ="panel-heading">
        <h3 class="panel-title">Business</h3>
      </div>
      <div class = "panel-body">
       <table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Business name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @businesses.each do |business| %>
      <tr>
        <td><%= business.business_name %></td>
        <td><%= business.phone_number %></td>
        <td><%= business.email %></td>
        <td><%= business.street_address %></td>
        <td><%= business.city %></td>
        <td><%= business.state %></td>
        <td><%= business.zip %></td>
        <td><%= link_to 'Show', business,class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_business_path(business),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', business,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

      </div>
      <div class="panel-footer">
        <%= link_to 'New Business', new_business_path, class: "btn btn-primary" %>
      </div>
       </div>
        </div>
         </div>

