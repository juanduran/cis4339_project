<p id="notice"><%= notice %></p>

<h1>Listing Estimates</h1>

<table>
  <thead>
    <tr>
      <th>Potential customer</th>
      <th>Terms</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estimates.each do |estimate| %>
      <tr>
        <td><%= estimate.potential_customer %></td>
        <td><%= estimate.terms %></td>
        <td><%= estimate.description %></td>
        <td><%= estimate.quantity %></td>
        <td><%= estimate.total %></td>
        <td><%= estimate.customer_id %></td>
        <td><%= link_to 'Show', estimate %></td>
        <td><%= link_to 'Edit', edit_estimate_path(estimate) %></td>
        <td><%= link_to 'Destroy', estimate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

