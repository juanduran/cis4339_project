
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Roles
        <small>Available</small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Roles</li>
      </ol>
    </div>
  </div>

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3">Options</th>
        </tr>
        </thead>
        <tbody>
        <% @roles.each do |role| %>
            <tr>
              <td><%= role.name %></td>
              <td><%= role.description %></td>
              <td><%= link_to 'Show', role,class: "btn btn-primary"  %></td>
              <td><%= link_to 'Edit', edit_role_path(role),class: "btn btn-warning" %></td>
              <td><%= link_to 'Destroy', role,class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>





<br>
  <div class="panel-footer">
       <%= link_to 'New Role', new_role_path,class: "btn btn-info" %>
      </div>

    </div>
    </div>