<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="col-xs-3">
    <%= f.input :employee_name %>
    <%= f.input :employee_phone %>
    <%= f.association :crew, :include_blank => true, :label_method => :crew_name%>
      <%= f.association :user, :include_blank => true, :label_method => :email%>


    <%= f.button :submit, class: "btn btn-success btn-sm" %>
  </div>
    </div>
<% end %>
