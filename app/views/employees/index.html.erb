

<!-- Page Content -->
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Employees
        <small>Available</small>
      </h1>
      <ol class="breadcrumb">
        <%= link_to "Welcome", welcome_index_path %>
        </li>
        <li class="active"> \ Employees</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
     <tr>
      <th>Employee name</th>
      <th>Employee email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
        </thead>
        <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.employee_name %></td>
        <td><%= employee.employee_email %></td>
        <td><%= employee.role_id %></td>
        <td><%= link_to 'Show', employee,class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_employee_path(employee),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', employee,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
        </tbody>
      </table>
    </div>

<br>
   <div class="panel-footer">
        <%= link_to 'New Employee', new_employee_path, class: "btn btn-info" %>
      </div>

    </div>
    </div>
